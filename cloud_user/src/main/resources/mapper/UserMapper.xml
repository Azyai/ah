<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itay.mapper.UserMapper">


    <select id="findByUsernameOrEmail" resultType="com.itay.entity.User">
        select *
        from user
        where username = #{text}
           or email = #{text}
    </select>
</mapper>
